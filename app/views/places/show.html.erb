<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @place.name %></h1>
  <p><em><%= @place.address %></em></p><br />
  <p><%= @place.description %></p><br />

  <% if @place.latitude.present? && @place.longitude.present? %>
    <script>

    function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBcav-9nRU_n4W-Shp83G9bv_TxAwQCcXU&callback=initMap">
    </script>
    <div id="map"></div><br />

  <% end %>

  <div class="pull-right">
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
      <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger' %>
    <% end %>
    <button class="btn btn-primary btn-success" data-toggle="modal" data-target="#myModal">
  Add A Comment
</button>
<br />
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
          <%= f.input :message %><br />
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %><br />
          
      </div>
      <div class="modal-footer">
        <%= f.submit "Add Comment", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="booyah-box col-xs-10 col-xs-offset-1">
 <h2>Comments</h2><br />
  <% @place.comments.each do |comment| %>
    <div class="col-xs-12 col-md-6">
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <strong><%= comment.humanized_rating %></strong> - 
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>